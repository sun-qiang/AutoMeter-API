  <select id="findDicWithName" resultMap="BaseResultMap">
    SELECT *
    FROM testscene_dispatch
    where execplanid=#{execplanid} and batchid =#{batchid} and slaverid =#{slaverid}
  </select>

  <insert id="insertBatchDispatch"  parameterType="com.zoctan.api.entity.TestsceneDispatch">
    insert into testscene_dispatch (execplanid, execplanname,batchid,batchname,slaverid,slavername,testsceneid,scenename,targetconcurrency,
    rampuptime,stepscount,holdtime,create_time,lastmodify_time,timeunit,iterations,ordernum)
    values
    <foreach collection="dispatchList" item="dispatch" index="index" separator=",">
      (#{dispatch.execplanid}, #{dispatch.execplanname}, #{dispatch.batchid},#{dispatch.batchname},#{dispatch.slaverid},
      #{dispatch.slavername},#{dispatch.testsceneid},#{dispatch.scenename},#{dispatch.targetconcurrency},#{dispatch.deployunitname},#{dispatch.rampuptime},
      #{dispatch.holdtime},DATE_FORMAT(NOW(),'%Y-%m-%d %H:%i:%s'),DATE_FORMAT(NOW(),'%Y-%m-%d %H:%i:%s'),#{dispatch.timeunit},#{dispatch.iterations},
      #{dispatch.ordernum}
    </foreach>
  </insert>

  <select id="getdistinctslaver" resultMap="BaseResultMap">
    select distinct(slaverid) from testscene_dispatch a where  executeplanid = #{executeplanid}  and batchname = #{batchname}
  </select>
